{
  "name": "benway",
  "version": "0.0.4",
  "description": "Browser extension to limit the number of open tabs",
  "main": "background.js",
  "scripts": {
    "build:firefox": "webpack --env browser=firefox --mode=production",
    "build:chrome": "webpack --env browser=chrome --mode=production",
    "build:edge": "webpack --env browser=edge --mode=production",
    "build:opera": "webpack --env browser=opera --mode=production",
    "build:safari": "webpack --env browser=safari --mode=production",
    "build:all": "npm run build:firefox && npm run build:chrome && npm run build:edge && npm run build:opera && npm run build:safari",
    "dev:firefox": "webpack --env browser=firefox --mode=development --watch",
    "dev:chrome": "webpack --env browser=chrome --mode=development --watch",
    "lint": "eslint .",
    "pack": "web-ext build -s dist/firefox -a web-ext-artifacts --overwrite-dest",
    "pack:chrome": "cd dist/chrome && zip -r ../../web-ext-artifacts/benway-chrome.zip *",
    "pack:edge": "cd dist/edge && zip -r ../../web-ext-artifacts/benway-edge.zip *",
    "pack:opera": "cd dist/opera && zip -r ../../web-ext-artifacts/benway-opera.zip *"
  },
  "keywords": [
    "browser-extension",
    "firefox",
    "chrome",
    "edge",
    "opera",
    "safari",
    "tab-management"
  ],
  "author": "zrks",
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@eslint/js": "^8.56.0",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.54.0",
    "globals": "^13.24.0",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "zip-webpack-plugin": "^4.0.1"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
